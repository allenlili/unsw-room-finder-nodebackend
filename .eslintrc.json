{
    "parser": "babel-eslint",
    "plugins": [
        "jest",
        "flowtype"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": "standard",
    "rules": {
        "no-use-before-define": 0,
        "brace-style": [2, "stroustrup"],
        "spaced-comment": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": [2, "always"],
        "no-multiple-empty-lines": [2, { "max": 2 }],
        "comma-dangle": ["error", "only-multiline"],
        "flowtype/define-flow-type": 1
    },
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    }
}
